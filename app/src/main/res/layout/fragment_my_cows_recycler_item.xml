<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/component_module_recycler_view_item_height"
    android:layout_marginEnd="@dimen/component_module_recycler_view_item_vertical_margin"
    android:layout_marginRight="@dimen/component_module_recycler_view_item_vertical_margin"
    android:layout_marginStart="@dimen/component_module_recycler_view_item_vertical_margin"
    android:layout_marginLeft="@dimen/component_module_recycler_view_item_vertical_margin"
    card_view:cardCornerRadius="@dimen/component_module_recycler_view_item_radius"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/component_module_recycler_view_item_elevation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/component_module_recycler_view_icon"
        android:layout_width="@dimen/component_module_recycler_view_item_image_width"
        android:layout_height="@dimen/component_module_recycler_view_item_image_height"
        android:layout_marginEnd="@dimen/component_module_recycler_view_item_image_vertical_margin"
        android:layout_marginRight="@dimen/component_module_recycler_view_item_image_vertical_margin"
        android:layout_marginStart="@dimen/component_module_recycler_view_item_image_vertical_margin"
        android:layout_marginLeft="@dimen/component_module_recycler_view_item_image_vertical_margin"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_my_cows"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toLeftOf="@id/component_module_recycler_view_name" />

    <TextView
        android:id="@+id/component_module_recycler_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="@id/component_module_recycler_view_number"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintLeft_toRightOf="@id/component_module_recycler_view_icon"
        tools:text="@string/component_module_recycler_view_item_simple_cow_name"/>

        <TextView
            android:id="@+id/component_module_recycler_view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            card_view:layout_constraintTop_toBottomOf="@id/component_module_recycler_view_name"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toRightOf="@id/component_module_recycler_view_icon"
            tools:text="@string/component_module_recycler_view_item_simple_cow_number"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>