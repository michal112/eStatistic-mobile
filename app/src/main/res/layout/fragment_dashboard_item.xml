<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_dashboard_item_height"
    android:layout_marginEnd="@dimen/fragment_dashboard_item_vertical_margin"
    android:layout_marginLeft="@dimen/fragment_dashboard_item_vertical_margin"
    android:layout_marginRight="@dimen/fragment_dashboard_item_vertical_margin"
    android:layout_marginStart="@dimen/fragment_dashboard_item_vertical_margin"
    card_view:cardCornerRadius="@dimen/fragment_dashboard_item_radius"
    card_view:cardElevation="@dimen/fragment_dashboard_item_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_dashboard_item_image"
            android:layout_width="@dimen/fragment_dashboard_item_image_width"
            android:layout_height="@dimen/fragment_dashboard_item_image_height"
            android:layout_marginEnd="@dimen/fragment_dashboard_item_card_margin"
            android:layout_marginLeft="@dimen/fragment_dashboard_item_card_margin"
            android:layout_marginRight="@dimen/fragment_dashboard_item_card_margin"
            android:layout_marginStart="@dimen/fragment_dashboard_item_card_margin"
            tools:src="@drawable/ic_farm_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/fragment_dashboard_item_card_margin"
            android:layout_marginLeft="@dimen/fragment_dashboard_item_card_margin"
            android:layout_marginRight="@dimen/fragment_dashboard_item_card_margin"
            android:layout_marginStart="@dimen/fragment_dashboard_item_card_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_dashboard_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fragment_dashboard_item_name_text_size"
                android:textStyle="bold"
                tools:text="@string/farm_card_name" />

            <TextView
                android:id="@+id/fragment_dashboard_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/farm_card_description" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>