<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/component_text_input_icon"
        android:layout_width="@dimen/component_text_input_image_width"
        android:layout_height="@dimen/component_text_input_image_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/component_text_input_image_vertical_margin"
        android:layout_marginLeft="@dimen/component_text_input_image_vertical_margin"
        android:layout_marginEnd="@dimen/component_text_input_image_vertical_margin"
        android:layout_marginRight="@dimen/component_text_input_image_vertical_margin" />

    <EditText
        android:id="@+id/component_text_input_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1" />

</LinearLayout>