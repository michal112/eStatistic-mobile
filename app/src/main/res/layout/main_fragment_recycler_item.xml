<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cow_cv_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cow_cv_padding">

        <ImageView
            android:id="@+id/iv_cow"
            android:layout_width="@dimen/cow_cv_iv_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/cow_cv_padding"
            android:paddingLeft="@dimen/cow_cv_padding"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_cow_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_cow"
            android:paddingLeft="@dimen/cow_cv_padding" />

        <TextView
            android:id="@+id/tv_cow_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cow_name"
            android:layout_toRightOf="@id/iv_cow"
            android:paddingLeft="@dimen/cow_cv_padding" />

    </RelativeLayout>

</android.support.v7.widget.CardView>