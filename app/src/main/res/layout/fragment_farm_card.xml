<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_farm_card_nested_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_app_bar_height"
    android:paddingLeft="@dimen/fragment_farm_card_padding_horizontal"
    android:paddingStart="@dimen/fragment_farm_card_padding_horizontal"
    android:paddingRight="@dimen/fragment_farm_card_padding_horizontal"
    android:paddingEnd="@dimen/fragment_farm_card_padding_horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_farm_card_card_user_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/fragment_farm_card_card_user_image_width"
                android:layout_height="@dimen/fragment_farm_card_card_user_image_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person"
                android:alpha="0.54"
                android:layout_marginLeft="@dimen/fragment_farm_card_image_left_margin"
                android:layout_marginStart="@dimen/fragment_farm_card_image_left_margin"
                android:layout_marginRight="@dimen/fragment_farm_card_image_right_margin"
                android:layout_marginEnd="@dimen/fragment_farm_card_image_right_margin"/>

            <EditText
                android:id="@+id/fragment_farm_card_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_farm_card_user_hint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/fragment_farm_card_card_user_image_width"
                android:layout_height="@dimen/fragment_farm_card_card_user_image_height"
                android:layout_gravity="top"
                android:src="@drawable/ic_photo"
                android:alpha="0.54"
                android:layout_marginLeft="@dimen/fragment_farm_card_image_left_margin"
                android:layout_marginStart="@dimen/fragment_farm_card_image_left_margin"
                android:layout_marginRight="@dimen/fragment_farm_card_image_right_margin"
                android:layout_marginEnd="@dimen/fragment_farm_card_image_right_margin"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_photo"
                android:alpha="0.26"
                android:layout_marginLeft="@dimen/fragment_farm_card_image_thumbnail_left_margin"
                android:layout_marginStart="@dimen/fragment_farm_card_image_thumbnail_left_margin"
                android:layout_marginRight="@dimen/fragment_farm_card_image_thumbnail_right_margin"
                android:layout_marginEnd="@dimen/fragment_farm_card_image_thumbnail_right_margin"/>

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>