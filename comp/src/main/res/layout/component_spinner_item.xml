<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/component_spinner_item_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/component_form_spinner_text_height"
        android:layout_marginLeft="@dimen/component_form_spinner_text_margin_left"
        android:gravity="center_vertical"
        android:textSize="@dimen/component_form_spinner_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/last_names" />

</android.support.constraint.ConstraintLayout>