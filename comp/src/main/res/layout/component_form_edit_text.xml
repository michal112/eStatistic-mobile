<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/component_form_edit_text_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/component_form_edit_text_image_container_width"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/component_form_edit_text_icon"
            android:layout_width="@dimen/component_form_edit_text_image_width"
            android:layout_height="@dimen/component_form_edit_text_image_height"
            android:layout_gravity="center_vertical"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

    <EditText
        android:id="@+id/component_form_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:textSize="@dimen/component_form_edit_text_size"
        tools:text="@tools:sample/full_names"
        android:layout_gravity="center"/>

</LinearLayout>