<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/component_form_spinner_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/component_form_spinner_image_container_width"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/component_form_spinner_icon"
            android:layout_width="@dimen/component_form_spinner_image_width"
            android:layout_height="@dimen/component_form_spinner_image_height"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

    <Spinner
        android:id="@+id/component_form_spinner"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:text="@tools:sample/full_names"
        android:textSize="16sp"/>

</LinearLayout>