<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/component_form_card_view_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/component_form_card_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/component_form_card_view_name_text_size"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names" />

        <LinearLayout
            android:id="@+id/component_form_card_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/component_form_card_view_container_margin_top"
            android:layout_marginRight="@dimen/component_form_card_view_container_margin_right"
            android:layout_marginBottom="@dimen/component_form_card_view_container_margin_bottom"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/component_form_card_view_container_margin_right" />

    </LinearLayout>

</android.support.v7.widget.CardView>